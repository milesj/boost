{
  "name": "@boost/module",
  "version": "4.0.0",
  "type": "commonjs",
  "release": "1651512177871",
  "description": "Module resolving and loading utilities with TypeScript support.",
  "keywords": [
    "boost",
    "module",
    "cjs",
    "mjs",
    "typescript"
  ],
  "main": "./cjs/index.cjs",
  "types": "./dts/index.d.ts",
  "files": [
    "cjs/**/*.{cjs,mjs,map}",
    "dts/**/*.d.ts",
    "mjs/**/*.{mjs,map}",
    "src/**/*.{ts,tsx,json}"
  ],
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:milesj/boost.git",
    "directory": "packages/module"
  },
  "author": "Miles Johnson",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "typescript": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/milesjohnson"
  },
  "packemon": [
    {
      "api": "private",
      "bundle": true,
      "format": "cjs",
      "platform": "node"
    },
    {
      "bundle": true,
      "inputs": {
        "loader": "src/loaders/index.ts",
        "loader-typescript": "src/loaders/typescript.ts"
      },
      "format": "mjs",
      "platform": "node"
    }
  ],
  "exports": {
    "./package.json": "./package.json",
    "./loader-typescript": {
      "types": "./dts/loaders/typescript.d.ts",
      "node": {
        "import": "./mjs/loader-typescript.mjs"
      }
    },
    "./loader": {
      "types": "./dts/loaders/index.d.ts",
      "node": {
        "import": "./mjs/loader.mjs"
      }
    },
    ".": {
      "types": "./dts/index.d.ts",
      "node": {
        "import": "./cjs/index-wrapper.mjs",
        "require": "./cjs/index.cjs"
      }
    }
  }
}
