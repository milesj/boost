{
  "private": true,
  "name": "boost-root",
  "scripts": {
    "setup": "rm -rf ./packages/*/lib && bash ./scripts/build-packages.sh",
    "build": "yarn run type",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run eslint",
    "type": "beemo typescript --reference-workspaces --build",
    "prerelease": "yarn test",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@milesj/build-tools": "^0.48.1",
    "fs-extra": "^8.0.1",
    "lerna": "^3.15.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "env": {
          "NODE_ENV": "test",
          "BOOST_ENV": "test"
        }
      },
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true
    },
    "typescript": {
      "exclude": [
        "tests/typings.ts"
      ]
    }
  }
}
