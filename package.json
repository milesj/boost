{
  "private": true,
  "name": "boost-root",
  "scripts": {
    "build": "packemon build --addEngines",
    "pack": "NODE_ENV=production packemon pack --addEngines --generateDeclaration=standard",
    "clean": "packemon clean",
    "coverage": "yarn run jest --coverage",
    "docs": "cd website && yarn run start",
    "lint": "beemo eslint",
    "jest": "beemo jest",
    "format": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:cli": "node ./packages/cli/examples/bin.js",
    "posttest": "yarn run lint",
    "type": "beemo typescript --reference-workspaces --build --decorators",
    "prerelease": "node scripts/checkReleaseRequirements.js && yarn run pack && yarn test",
    "release": "lerna version --conventional-commits --changelog-preset conventional-changelog-beemo --create-release github --push && lerna publish from-git"
  },
  "engines": {
    "node": ">=10.17.0"
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.14.1",
    "@types/babel__core": "^7.1.12",
    "@types/exit": "^0.1.31",
    "@types/fs-extra": "^9.0.5",
    "@types/json5": "^0.0.30",
    "@types/lodash": "^4.14.165",
    "@types/minimatch": "^3.0.3",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^16.9.55",
    "@types/semver": "^7.3.4",
    "@types/split": "^1.0.0",
    "@types/wrap-ansi": "^3.0.0",
    "conventional-changelog-beemo": "^2.0.0",
    "fs-extra": "^9.0.1",
    "lerna": "^3.22.1",
    "packemon": "^0.7.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*",
    "themes/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      {
        "driver": "babel",
        "strategy": "none"
      },
      "eslint",
      {
        "driver": "jest",
        "env": {
          "NODE_ENV": "test",
          "BOOSTJS_ENV": "test"
        }
      },
      "prettier",
      {
        "driver": "typescript",
        "declarationOnly": true
      }
    ],
    "settings": {
      "decorators": true,
      "node": true,
      "react": true
    },
    "prettier": {
      "ignore": [
        "CHANGELOG.md"
      ]
    },
    "typescript": {
      "compilerOptions": {
        "keyofStringsOnly": true
      }
    }
  }
}
