{
  "private": true,
  "name": "boost-root",
  "scripts": {
    "build": "beemo typescript --workspaces=* --priority --node",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run eslint",
    "type": "beemo typescript --workspaces=* --noEmit",
    "prerelease": "yarn test && yarn run build",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "0.119.0",
    "fs-extra": "^7.0.0",
    "lerna": "^3.2.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "env": {
          "NODE_ENV": "test",
          "BOOST_ENV": "test"
        }
      },
      "prettier",
      "typescript"
    ]
  }
}
