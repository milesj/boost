{
  "private": true,
  "name": "boost-root",
  "scripts": {
    "build": "yarn run clean && tsc --build && beemo create-config --silent",
    "clean": "rm -rf ./packages/*/{lib,*.tsbuildinfo}",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run eslint",
    "type": "beemo typescript --reference-workspaces --build --clean",
    "prerelease": "yarn run build && yarn test",
    "release": "lerna version --conventional-commits --changelog-preset conventional-changelog-beemo --create-release github --push && lerna publish from-git"
  },
  "devDependencies": {
    "@milesj/build-tools": "^0.60.0",
    "@types/exit": "^0.1.30",
    "@types/fs-extra": "^8.0.1",
    "@types/js-yaml": "^3.12.1",
    "@types/json5": "^0.0.30",
    "@types/lodash": "^4.14.149",
    "@types/pluralize": "^0.0.29",
    "@types/split": "^1.0.0",
    "@types/wrap-ansi": "^3.0.0",
    "conventional-changelog-beemo": "^1.5.3",
    "fs-extra": "^8.1.0",
    "lerna": "^3.19.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*",
    "themes/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "env": {
          "NODE_ENV": "test",
          "BOOST_ENV": "test"
        }
      },
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true
    },
    "prettier": {
      "ignore": [
        "CHANGELOG.md"
      ]
    },
    "typescript": {
      "exclude": [
        "tests/typings.ts"
      ]
    }
  }
}
