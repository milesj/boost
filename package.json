{
  "private": true,
  "name": "boost-root",
  "scripts": {
    "build": "rm -rf ./packages/*/{lib,*.tsbuildinfo} && tsc --build",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run eslint",
    "type": "beemo typescript --reference-workspaces --build --clean",
    "prerelease": "yarn test",
    "release": "lerna version --conventional-commits --changelog-preset conventional-changelog-beemo --create-release github --push && lerna publish from-git"
  },
  "devDependencies": {
    "@milesj/build-tools": "^0.59.2",
    "conventional-changelog-beemo": "^1.5.1",
    "fs-extra": "^8.1.0",
    "lerna": "^3.18.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*",
    "themes/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "env": {
          "NODE_ENV": "test",
          "BOOST_ENV": "test"
        }
      },
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true
    },
    "prettier": {
      "ignore": [
        "CHANGELOG.md"
      ]
    },
    "typescript": {
      "exclude": [
        "tests/typings.ts"
      ]
    }
  }
}
