{
  "private": true,
  "name": "boost-root",
  "scripts": {
    "build": "yarn run clean && tsc --build",
    "clean": "rm -rf packages/*/{lib,*.tsbuildinfo}",
    "coverage": "yarn run jest --coverage --detectOpenHandles --forceExit",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run eslint",
    "type": "beemo typescript --reference-workspaces --build --clean --decorators",
    "prerelease": "node scripts/checkReleaseRequirements.js && yarn run build && yarn test",
    "release": "lerna version --conventional-commits --changelog-preset conventional-changelog-beemo --create-release github --push && lerna publish from-git"
  },
  "devDependencies": {
    "@milesj/build-tools": "^1.0.1",
    "@types/exit": "^0.1.31",
    "@types/fs-extra": "^8.1.0",
    "@types/js-yaml": "^3.12.3",
    "@types/json5": "^0.0.30",
    "@types/lodash": "^4.14.149",
    "@types/pluralize": "^0.0.29",
    "@types/split": "^1.0.0",
    "@types/wrap-ansi": "^3.0.0",
    "conventional-changelog-beemo": "^1.6.0",
    "fs-extra": "^8.1.0",
    "lerna": "^3.20.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*",
    "themes/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "env": {
          "NODE_ENV": "test",
          "BOOSTJS_ENV": "test"
        }
      },
      "prettier",
      "typescript"
    ],
    "settings": {
      "decorators": true,
      "node": true,
      "react": true
    },
    "prettier": {
      "ignore": [
        "CHANGELOG.md"
      ]
    },
    "typescript": {
      "compilerOptions": {
        "useDefineForClassFields": false
      },
      "exclude": [
        "tests/typings.ts"
      ]
    }
  }
}
