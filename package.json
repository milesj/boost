{
  "name": "boost",
  "version": "0.0.12",
  "description": "Robust pipeline for creating build tools that separate logic into routines and tasks.",
  "keywords": [],
  "main": "./lib/index.js",
  "files": [
    "*.md",
    "lib"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "babel ./src -d ./lib",
    "lint": "eslint ./src ./tests",
    "flow": "flow check",
    "jest": "jest --config ./jest.json",
    "coverage": "yarn run jest -- --coverage",
    "pretest": "yarn run lint",
    "test": "yarn run jest",
    "posttest": "yarn run flow",
    "preversion": "yarn test && yarn run clean && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/boost.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/boost/issues"
  },
  "homepage": "https://github.com/milesj/boost#readme",
  "engines": {
    "node": ">=6.5.0"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "chalk": "^1.1.3",
    "elegant-spinner": "^1.0.1",
    "figures": "^2.0.0",
    "lodash": "^4.17.2",
    "vorpal": "^1.11.4"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.3.3"
  },
  "babel": {
    "extends": "./node_modules/@milesj/build-tool-config/babel.node.json5"
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.json5"
  },
  "jest": {
    "preset": "@milesj/build-tool-config"
  }
}
