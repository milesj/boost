{
  "private": true,
  "name": "boost-root",
  "scripts": {
    "build": "yarn run packemon build --addEngines",
    "pack": "NODE_ENV=production yarn run packemon pack --addEngines --addExports --declaration",
    "clean": "yarn run packemon clean && rm -rf ./packages/*/tsconfig.tsbuildinfo",
    "check": "yarn run type && yarn run test && yarn run lint",
    "coverage": "yarn test --coverage",
    "docs": "cd website && yarn run start",
    "lint": "eslint --cache --color --fix --ext .ts,.tsx ./packages/*/{src,tests}",
    "format": "prettier --write .",
    "test": "NODE_ENV=test BOOSTJS_ENV=test vitest --colors --logHeapUsage",
    "test:cli": "node ./packages/cli/examples/bin.js",
    "test:tsm": "node ./packages/module/tests/commonjs.assert.cjs && node ./packages/module/tests/commonjs.assert.mjs",
    "test:loader": "node --experimental-loader @boost/module/loader ./packages/module/tests/esmloader.assert.mjs && node --loader @boost/module/loader-typescript ./packages/module/tests/esmloader.assert.mjs",
    "type": "tsc --build",
    "release": "yarn run pack && yarn run check && lerna-release",
    "version": "yarn install && git add yarn.lock",
    "packemon": "yarn dlx --package packemon@2.3.3 --package typescript --quiet packemon"
  },
  "engines": {
    "node": ">=14.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.5",
    "@moonrepo/dev": "^2.0.0",
    "@types/babel__core": "^7.20.0",
    "@types/exit": "^0.1.31",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.194",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^17.0.58",
    "@types/semver": "^7.3.13",
    "@types/split": "^1.0.2",
    "@types/wrap-ansi": "^3.0.0",
    "babel-preset-moon": "^2.0.3",
    "eslint": "^8.39.0",
    "eslint-config-moon": "^2.0.3",
    "fs-extra": "^11.1.1",
    "lerna": "^6.6.1",
    "prettier": "^2.8.8",
    "prettier-config-moon": "^1.1.2",
    "time-require": "^0.1.2",
    "tsconfig-moon": "^1.3.0",
    "typescript": "^5.0.4",
    "vitest": "^1.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*",
    "themes/*",
    "website"
  ],
  "packageManager": "yarn@3.2.0"
}
