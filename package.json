{
  "name": "boost",
  "version": "0.35.1",
  "description": "Robust pipeline for creating build tools that separate logic into routines and tasks.",
  "keywords": [],
  "main": "./lib/index.js",
  "scripts": {
    "build": "beemo typescript",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "posttest": "yarn run eslint --silent",
    "pretest": "yarn run type --silent",
    "test": "yarn run jest --silent",
    "postversion": "yarn run build",
    "prettier": "beemo prettier",
    "type": "beemo typescript --noEmit",
    "preversion": "yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/boost.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/boost/issues"
  },
  "homepage": "https://github.com/milesj/boost#readme",
  "engines": {
    "node": ">=6.5.0"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "elegant-spinner": "^1.0.1",
    "execa": "^0.10.0",
    "figures": "^2.0.0",
    "glob": "^7.1.2",
    "json5": "^1.0.1",
    "lodash": "^4.17.5",
    "log-update": "^2.3.0",
    "optimal": "^0.17.1",
    "pluralize": "^7.0.0",
    "split": "^1.0.1"
  },
  "peerDependencies": {
    "optimal": "^0.16.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "0.76.2",
    "@types/chalk": "^2.2.0",
    "@types/execa": "^0.9.0",
    "@types/figures": "^2.0.0",
    "@types/glob": "^5.0.35",
    "@types/json5": "^0.0.29",
    "@types/lodash": "^4.14.106",
    "@types/log-update": "^2.0.0",
    "@types/pluralize": "^0.0.28",
    "@types/split": "^0.3.28",
    "fs-extra": "^5.0.0"
  },
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "env": {
          "NODE_ENV": "test"
        }
      },
      "prettier",
      "typescript"
    ]
  }
}
